<component name="managedSources" type="synapse/template">
    <subComponents>
        <component name="addAuth">
            <file>addAuth.xml</file>
            <description>Add one or more authorization credentials to a Managed Source.</description>
        </component>
        <component name="addResources">
            <file>addResources.xml</file>
            <description>Add one or more resources to a Managed Source.</description>
        </component>
        <component name="createSource">
            <file>createSource.xml</file>
            <description>Create a Managed Source.</description>
        </component>
        <component name="deleteSource">
            <file>deleteSource.xml</file>
            <description>Delete a Managed Source.</description>
        </component>
        <component name="getSource">
            <file>getSource.xml</file>
            <description>Retrieve details of a Managed Source.</description>
        </component>
        <component name="getSourceLog">
            <file>getSourceLog.xml</file>
            <description>Retrieve the log for a specific Managed Source.</description>
        </component>
        <component name="removeAuth">
            <file>removeAuth.xml</file>
            <description>Remove one or more authorization tokens from a Managed Source.</description>
        </component>
        <component name="removeResources">
            <file>removeResources.xml</file>
            <description>Remove one or more resources from a Managed Source.</description>
        </component>
        <component name="startSource">
            <file>startSource.xml</file>
            <description>Start or restart delivery of source data.</description>
        </component>
        <component name="stopSource">
            <file>stopSource.xml</file>
            <description>Stop delivery of source data.</description>
        </component>
        <component name="updateSource">
            <file>updateSource.xml</file>
            <description>Update a Managed Source.</description>
        </component>
    </subComponents>
</component>