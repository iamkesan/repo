<component name="core" type="synapse/template">
    <subComponents>
        <component name="getBalance">
            <file>getBalance.xml</file>
            <description>Determine the credit balance or DPU balance.</description>
        </component>
        <component name="calculateDPU">
            <file>calculateDPU.xml</file>
            <description>Calculate the DPU cost of consuming a stream.</description>
        </component>
        <component name="compileCSDL">
            <file>compileCSDL.xml</file>
            <description>Compile a CSDL filter.</description>
        </component>
        <component name="getUsage">
            <file>getUsage.xml</file>
            <description>Check the number of objects processed and delivered for a given time period.</description>
        </component>
        <component name="validateCSDL">
            <file>validateCSDL.xml</file>
            <description>Check the syntax of the CSDL code of a filter without compiling.</description>
        </component>
    </subComponents>
</component>